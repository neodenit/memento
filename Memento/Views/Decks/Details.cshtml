@model Memento.Models.Deck

@using Memento.Controllers

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.Title)</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-md-offset-2 col-md-10">
        <h4>Answers:</h4>
        <div id="answersPlaceholder"></div>
        <h4>Correct answers:</h4>
        <div id="correctAnswersPlaceholder"></div>
        <h4>Cards in repetition:</h4>
        <div id="cardsNumberPlaceholder"></div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Start" class="btn btn-default" />
        </div>
    </div>
}

<p>
    @Html.ActionLink("Back to List", "Index")
</p>
