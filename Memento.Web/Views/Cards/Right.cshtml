@model Memento.Models.ViewModels.AnswerCardViewModel

@{
    ViewBag.Title = "Right";
}

<h2>Right</h2>

<div>
    <h4>@Html.DisplayFor(model => model.DeckTitle)</h4>

    @{Html.RenderPartial("_TopActions");}

    @using (Html.BeginForm("Right", "Cards"))
    {

    @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.ID)

        Html.RenderPartial("_Answer");

        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-2">
                    Correct answer:
                </div>
                <div class="col-md-10 short-answer-text">
                    @Html.DisplayFor(model => model.ShortAnswer)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    Your answer:
                </div>
                <div class="col-md-10 short-answer-text">
                    @Html.DisplayFor(model => model.UserAnswer)
                </div>
            </div>
        </div>

        <div class="right-answer">You are right!</div>

        <input type="submit" value="Next" class="btn btn-default focused" />
    }
</div>
