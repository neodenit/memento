@model Memento.Models.ViewModels.AnswerCardViewModel

@{
    ViewBag.Title = "Typo";
}

<h2>@Html.DisplayFor(model => model.DeckTitle)</h2>

@{Html.RenderPartial("_TopActions");}

@using (Html.BeginForm("Typo", "Cards", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.ID)

    Html.RenderPartial("_Answer");
    Html.RenderPartial("_Comparison");

    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <div class="typo-answer">Your answer looks like a typo!</div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-2">
            <input type="submit" name="TypoButton" value="It's a typo!" class="btn btn-primary focused btn-block" />
        </div>
        <div class="col-md-2">
            <input type="submit" name="WrongButton" value="It's a wrong answer!" class="btn btn-default btn-block" />
        </div>
        <div class="col-md-2">
            <input type="submit" name="AltButton" value="It's an alt answer!" class="btn btn-default btn-block" />
        </div>
    </div>
}
