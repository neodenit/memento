@model Memento.Models.ViewModels.AnswerCardViewModel

@{
    ViewBag.Title = "Wrong";
}

<h2>Wrong</h2>

<div>
    <h4>@Html.DisplayFor(model => model.DeckTitle)</h4>

    @{Html.RenderPartial("_TopActions");}

    @using (Html.BeginForm("Wrong", "Cards"))
    {

    @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.ID)

        Html.RenderPartial("_Answer");

        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-2">
                    Correct answer:
                </div>
                <div class="col-md-10 short-answer-text">
                    @Html.DisplayFor(model => model.ShortAnswer)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-2">
                    Your answer:
                </div>
                <div class="col-md-10 short-answer-text">
                    @Html.DisplayFor(model => model.UserAnswer)
                </div>
            </div>
        </div>

        <div class="wrong-answer">You are wrong!</div>

        <input type="submit" name="NextButton" value="Next" class="btn btn-default focused" />

        <hr />

        <p>Is it an alternative answer?</p>
        <input type="submit" name="AltButton" value="Add it" class="btn btn-default" />
    }
</div>
