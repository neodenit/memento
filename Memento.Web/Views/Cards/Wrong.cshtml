@model Memento.Models.ViewModels.AnswerCardViewModel

@{
    ViewBag.Title = "Wrong";
}

<h2>Wrong</h2>

<div>
    <h4>@Html.DisplayFor(model => model.DeckTitle)</h4>
    <hr />

    @{Html.RenderPartial("_TopActionsView");}

    @using (Html.BeginForm("Wrong", "Cards"))
    {

    @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.ID)

        Html.RenderPartial("_Answer");

        <p>
            Your answer:
            @Html.DisplayFor(model => model.UserAnswer)
        </p>

        <hr />

        <div>You are wrong!</div>
        <input type="submit" name="NextButton" value="Next" class="btn btn-default" />

        <hr />

        <p>Is it an alternative answer?</p>
        <input type="submit" name="AltButton" value="Add it" class="btn btn-default" />
    }
</div>
