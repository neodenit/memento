@model Neodenit.Memento.Models.ViewModels.AnswerCardViewModel

@{
    ViewBag.Title = "Typo";
}

<h2>@Html.DisplayFor(model => model.DeckTitle)</h2>

@{Html.RenderPartial("_TopActions");}

@using (Html.BeginForm("Typo", "Cards", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        <div class="col-md-2 text-right">
            Your answer:
        </div>
        <div class="col-md-8 short-answer-text">
            @Html.DisplayFor(model => model.UserAnswer)
        </div>
    </div>

    <div class="form-group">
        <div class="offset-md-2 col-md-8">
            <div class="typo-answer">There is a typo in your answer!</div>
        </div>
    </div>
    <div class="form-group">
        <div class="offset-md-2 col-md-2">
            <input type="submit" value="Try again" class="btn btn-primary focused btn-block" />
        </div>
    </div>
}
