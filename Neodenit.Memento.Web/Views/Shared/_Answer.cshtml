@model Neodenit.Memento.Models.ViewModels.AnswerCardViewModel


<div class="form-group">
    <div class="col-md-offset-2 col-md-8">
        <div class="card-text">@Model.FullAnswer</div>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Comment))
{
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-8">
            <div class="card-text">@Model.Comment</div>
        </div>
    </div>
}
